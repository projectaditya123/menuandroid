<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JadwalPelajaran">

    <!-- Existing layout code ... -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih mata pelajaran"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:padding="16dp"/>
    <Spinner
        android:id="@+id/spinnerSubjects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/subjects"
        android:prompt="@string/select_subject_prompt"/>

    <Button
        android:id="@+id/openDatePickerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih tanggal"
        android:layout_gravity="center"/>

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:calendarViewShown="false"/>

    <Button
        android:id="@+id/openTimePickerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pilih waktu"
        android:layout_gravity="center"/>

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih Hari Yang Diinginkan"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:padding="16dp"/>

    <Spinner
        android:id="@+id/spinnerDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/days"
        android:prompt="@string/select_day_prompt"/>

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>
    </LinearLayout>

</ScrollView>

